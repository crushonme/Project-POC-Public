<Window x:Class="FMPTestClient.FileUploadDisplay.ImageDisplayContainerWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:imageDisplay="clr-namespace:UFileClient.Display;assembly=UFileImageDisplayContainer"
        Title="ImageDisplayContainerWnd" Height="790" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <imageDisplay:ExplorerImage Grid.Row="0" Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Content="追加图像" HorizontalAlignment="Left" Height="41" Margin="29,51,0,-41" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="buttonAddImage_Click"/>
        <Button Content="插入图像" HorizontalAlignment="Left" Height="41" Margin="218,51,0,-41" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="buttonInsertImage_Click"/>
        <Button Content="清除图像" HorizontalAlignment="Left" Height="41" Margin="411,51,0,-41" Grid.Row="1" VerticalAlignment="Top" Width="120" Name="ClearImage" Click="buttonClearImage_Click"/>
    </Grid>
</Window>
